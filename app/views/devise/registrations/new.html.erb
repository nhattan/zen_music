<div class="login-box">
  <div class="login-logo">
    <a href="/"><b><%= Setting.app_name %></b></a>
  </div><!-- /.login-logo -->
  <div class="login-box-body">
    <p class="login-box-msg">Sign up</p>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group has-feedback">
        <%= f.email_field :email, class: 'form-control', autofocus: true, placeholder: 'Email' %>
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
      </div>

      <div class="form-group has-feedback">
        <%= f.password_field :password, class: 'form-control', autocomplete: 'off', placeholder: 'Password' %>
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>

      <div class="form-group has-feedback">
        <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: 'off', placeholder: 'Password confirmation' %>
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>

      <div class="form-group">
        <%= f.submit 'Register', class: 'btn btn-primary btn-block btn-flat' %>
      </div>

    <% end %>
    <%= render "devise/shared/links" %>
  </div><!-- /.login-box-body -->
</div><!-- /.login-box -->
