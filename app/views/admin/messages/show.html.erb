<%= content_for :title, "Message #{@message.id}" %>

<%= link_to 'Back', :back, class: 'btn btn-default' %>

<div class="box box-solid">
  <div class="box-header">
    <h3 class="box-title"></h3>
  </div>
  <div class="box-body table-responsive no-padding">
    <table class="table table-hover">
      <tr>
        <td><b>ID</b></td>
        <td>
          <%= @message.id %>
        </td>
      </tr>
      <tr>
        <td><b>Title</b></td>
        <td>
          <%= @message.title %>
        </td>
      </tr>
      <tr>
        <td><b>Body</b></td>
        <td>
          <%= @message.body %>
        </td>
      </tr>
      <tr>
        <td><b>Audio</b></td>
        <td>
          <%= link_to @message.audio.name, admin_audio_path(@message.audio) if @message.audio %>
        </td>
      </tr>
      <tr>
        <td><b>Created at</b></td>
        <td>
          <%= @message.created_at %>
        </td>
      </tr>
      <tr>
        <td><b>Updated at</b></td>
        <td>
          <%= @message.updated_at %>
        </td>
      </tr>
    </table>
  </div>
</div>
