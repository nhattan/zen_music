<%= content_for :title, "Show User" %>

<%= link_to 'Back', admin_users_path, class: 'btn btn-default' %>
<%= link_to 'Edit', edit_admin_user_path(@user), class: 'btn btn-primary' %>

<div class="box box-solid">
  <div class="box-body table-responsive no-padding">
    <table class="table table-hover">
      <tr>
        <td><b>Email</b></td>
        <td>
          <%= @user.email %>
        </td>
      </tr>
      <tr>
        <td><b>Name</b></td>
        <td>
          <%= @user.name %>
        </td>
      </tr>
      <tr>
        <td><b>Phone</b></td>
        <td>
          <%= @user.phone %>
        </td>
      </tr>
      <tr>
        <td><b>Admin</b></td>
        <td>
          <%= @user.admin %>
        </td>
      </tr>
      <tr>
        <td><b>Confirmed at</b></td>
        <td>
          <%= @user.confirmed_at %>
        </td>
      </tr>
      <tr>
        <td><b>Confirmation sent at</b></td>
        <td>
          <%= @user.confirmation_sent_at %>
        </td>
      </tr>
      <tr>
        <td><b>Sign in count</b></td>
        <td>
          <%= @user.sign_in_count %>
        </td>
      </tr>
      <tr>
        <td><b>Current sign in at</b></td>
        <td>
          <%= @user.current_sign_in_at %>
        </td>
      </tr>
      <tr>
        <td><b>Last sign in at</b></td>
        <td>
          <%= @user.last_sign_in_at %>
        </td>
      </tr>
      <tr>
        <td><b>Current sign in IP</b></td>
        <td>
          <%= @user.current_sign_in_ip %>
        </td>
      </tr>
      <tr>
        <td><b>Last sign in IP</b></td>
        <td>
          <%= @user.last_sign_in_ip %>
        </td>
      </tr>
      <tr>
        <td><b>Created at</b></td>
        <td>
          <%= @user.created_at %>
        </td>
      </tr>
      <tr>
        <td><b>Updated at</b></td>
        <td>
          <%= @user.updated_at %>
        </td>
      </tr>
    </table>
  </div>
</div>
