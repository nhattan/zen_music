<%= form_for [:admin, @user] do |f| %>
  <div class="row">
    <div class="col-md-9">
      <div class="box box-solid">
        <div class="box-header">
          <div class="box-body pad">
            <%= render "admin/shared/form_error", record: @user %>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, class: "form-control", required: true %>
            </div>
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :phone %>
              <div class="input-group">
                <div class="input-group-addon">
                  <i class="fa fa-phone"></i>
                </div>
                <%= f.datetime_field :phone, class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :role %>
              <%= f.collection_select :role, User.roles.keys, :to_s, :humanize, {}, class: "form-control" %>
            </div>
            <% if @user.persisted? && @user.normal_user? %>
              <div class="form-group">
                <%= f.label :plan_expires_in %>
                <div class="input-group">
                  <div class="input-group-addon">
                    <i class="fa fa-calendar"></i>
                  </div>
                  <%= f.text_field :plan_expires_in, data: { :date_format => 'YYYY/MM/DD hh:mm' }, class: "form-control datetimepicker" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="box box-solid">
        <div class="box-header"></div>
        <div class="box-body">
          <div class="form-group">
            <%= f.submit class: "btn btn-success btn-block" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
